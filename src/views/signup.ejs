<%- include('includes/head.ejs')%>

<body>
    <% -include('includes/nav.ejs')%>
    <div class="container container-sm container-sign">
        <form class="form-sign" action="/signup" method="post">
            <h5 class="form-headline">계정 만들기</h5>
            <div class="form-group">
                <input type="email" class="form-control" id="inputEmail" placeholder="이메일 입력" name="inputEmail" required>
                <span class="validator userId"></span>
            </div>
            <div class="form-group">
                <input type="text" maxlength="16" class="form-control" id="inputUsername" placeholder="닉네임" name="inputUsername" required>
                <span class="validator username"></span>
            </div>
            <div class="form-group">
                <input type="password" maxlength="20" class="form-control" id="inputPassword" placeholder="비밀번호 입력" name="inputPassword" required>
                <span class="validator password"></span>
            </div>
            <div class="form-group">
                <input type="password" maxlength="20" class="form-control" id="confirmPassword" placeholder="비밀번호 확인하기" name="confirmPassword" required>
                <span class="validator confirm"></span>
            </div>
            <button disabled="" class="btn btn-block btn-primary" data-toggle="modal" data-target=".modal" id="signup"><a herf="login.ejs">동의하고 시작하기</a></button>

            <a href="" class="btn btn-block btn-light">로그인</a>

            <h6 class="txt-terms"><a href="#">이용약관</a> 및 <a href="#">개인정보</a>취급방침</h6>
        </form>
    </div>

    <script src="./js/script.js" defer></script>
    <%- include('includes/scripts.ejs')%>
</body>

</html>